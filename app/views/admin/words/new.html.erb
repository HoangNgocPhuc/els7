<%= provide(:title, t("word.title")) %>
<h1><%= t("word.label") %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [:admin, @word] do |f| %>
      <%= render "shared/error_messages", object: f.object %>

      <%= f.label :word %>
      <%= f.text_field :learning_word, class: "form-control" %>

      <%= f.label :meaning %>
      <%= f.text_field :meaning, class: "form-control" %>
      
      <%= f.submit t("form.create"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
