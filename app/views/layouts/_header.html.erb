<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to t("title.base_title"), root_path, id: "logo", class: "navbar-brand" %>
    </div>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <li><%= link_to t("title.home"), root_path, class: "active" %></li>
        <li><%= link_to t("title.help"), help_path, class: "active" %></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <%= t("header.language") %><b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to t("header.english"), locale: "en" %></li>
            <li><%= link_to t("header.vietnamese"), locale: "vi" %></li>
          </ul>
        </li>
      </ul>
      <% if logged_in? %>
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to t("user.user"), "#" %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t("user.account") %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("user.profile"), current_user %></li>
              <li><%= link_to t("user.settings"), "#" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("user.logout"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        </ul>
      <% else %>
        <ul class="nav navbar-nav navbar-right">
          <li>
            <%= link_to signup_path do %>
              <span class="glyphicon glyphicon-user"></span>
              <%= t("title.signup") %>
            <% end %>
          </li>
          <li>
            <%= link_to login_path do %>
              <span class="glyphicon glyphicon-log-in"></span>
              <%= t("title.login") %>
            <% end %>
          </li>
        </ul>
      <% end %>
    </div>
  </div>
</header>
